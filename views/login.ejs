<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body" style="background-image: linear-gradient(to top, #2356ba, #0eadff);">
            <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
            
            <% include ./partials/messages %>

            <form action="/users/login" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" style="background: rgba(22, 137, 227, 0.11);" />
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" style="background: rgba(22, 137, 227, 0.11);" />
                </div>
                <button type="submit" class="btn btn-primary btn-block" style=" width: 60%;margin: auto;background-color: rgba(235, 104, 100, 0.31);">Login</button>
            </form>
            <p class="lead mt-4">
                No Account? <a href="/users/register" style="color: #b9b9b9;">Register</a>
            </p>
        </div>
    </div>
</div> 